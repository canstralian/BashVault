
# InfoGather Production Configuration
# Copy this file to .env and configure your environment

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-generate-with-secrets.token_hex(32)

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/infogather

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-admin-password-here

# Security Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=3600
LOG_LEVEL=INFO

# Rate Limiting (Redis URL for production, memory:// for development)
REDIS_URL=redis://localhost:6379/0

# Application Settings
PORT=5000
MAX_CONTENT_LENGTH=16777216

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_METRICS_PORT=9090

# Email Configuration (for notifications)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# External API Keys (for advanced features)
SHODAN_API_KEY=
VIRUSTOTAL_API_KEY=
CENSYS_API_ID=
CENSYS_API_SECRET=

# Development Settings (only for development)
DEBUG=false
TESTING=false
